<y:ThenWindow x:Class="ThenSetupWindows.ShowImages"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:y="clr-namespace:ThenSetupWindows"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Border BorderThickness="1" BorderBrush="Black" Margin="4,4,4,4">
            <TextBlock VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="15">Configure size of photo to get Web URL</TextBlock>
        </Border>
        
    </Grid>
</y:ThenWindow>
