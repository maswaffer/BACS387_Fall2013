<y:ThenWindow x:Class="ThenSetupWindows.ThenSendEmailWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Send Email Configuration"
            xmlns:y="clr-namespace:ThenSetupWindows"
              Height="200" Width="500" WindowStartupLocation="CenterOwner" Loaded="ThenWindow_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="115*"/>
            <ColumnDefinition Width="377*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="137*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Email Address" Margin="8 8 0 0"/>
        <TextBox Name="Email" Grid.Column="1"/>
        <Button Content="OK" Grid.Column="1" IsDefault="True" Margin="0 0 8 8"  Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="OKButton_Click" Width="100"/>
    </Grid>
</y:ThenWindow>
