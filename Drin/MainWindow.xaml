<Window x:Class="Drin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow">
    <Grid>
    	<Grid.RowDefinitions>
    		<RowDefinition Height="233*"/>
    		<RowDefinition Height="272*"/>
    	</Grid.RowDefinitions>
    	<ScrollViewer HorizontalAlignment="Left" Height="272" Margin="0" Grid.Row="1" VerticalAlignment="Top" Width="750">
    		<StackPanel x:Name="Rules" Height="262" Width="740" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    	</ScrollViewer>
    	<Grid HorizontalAlignment="Left" Height="223" Margin="10,10,0,0" VerticalAlignment="Top" Width="740">
    		<Grid.RowDefinitions>
    			<RowDefinition Height="0*"/>
    			<RowDefinition/>
    		</Grid.RowDefinitions>
    		<Grid.ColumnDefinitions>
    			<ColumnDefinition Width="193*"/>
    			<ColumnDefinition Width="226*"/>
    			<ColumnDefinition Width="321*"/>
    		</Grid.ColumnDefinitions>
    		<StackPanel HorizontalAlignment="Left" Height="203" Margin="10,10,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="173">
    			<Button x:Name="AddRule" Content="Add Rule" Click="AddRule_Click"/>
    			<Button x:Name="StartEngine" Content="Start Engine"/>
    		</StackPanel>
    	</Grid>
    </Grid>
</Window>
