<y:IfWindow x:Class="IfSetupWindows.IfPhotoConditionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IfPhotoConditionWindow" Height="300" Width="300"
        xmlns:y ="clr-namespace:IfSetupWindows">
        
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="Condition: "/>
        <ComboBox Text="Is not open" Grid.Row="0" Grid.Column="1">
            <ComboBoxItem>condition1</ComboBoxItem>
            <ComboBoxItem>condition1</ComboBoxItem>
            <ComboBoxItem>condition1</ComboBoxItem>
        </ComboBox>
    </Grid>
</y:IfWindow>
